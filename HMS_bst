            cin>>h.gender;
            cout<<"\nEnter Patient Email( abc@xyz.com ):";
            cin>>h.email;
            cout<<"\nEnter Patient Phone No( 10 digits ):";
            cin>>h.phone;
            root = tree.insert(input,h,root);
            cout<<"\nAfter Insert: "<<input<<endl;
            tree.inorder(root);
            getchar();
            break;
        case 2:
            system("clear");
