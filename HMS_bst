    line();
    cout<<"\nPress Any key to continue";
    getchar();
    system("clear");
    BSTree tree;
    bst *root;
    bst *node;
    root = NULL;
    const int length = 10;
    int i;
    int choice;
    hospital h;
    
        //INSERTING SOME VALUES
    for(int i = 0; i < 100;i++){
        int key = rand()%1000;
        h.pname = generate(rand()%12);
